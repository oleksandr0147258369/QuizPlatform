@{
    ViewData["Title"] = "Results";
    Layout = "_Layout";
    ViewData["HasHeader"] = true;
    ViewData["HasFooter"] = true;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5" style = "margin-bottom: 30px">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5 bg-light">
            <h2 class="text-center mb-4 text-primary">🎓 Results</h2>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5 class="text-muted">👤 User name:</h5>
                    <p class="fs-5">@Model.UserName</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">📅 Start of the test:</h5>
                    <p class="fs-5">@Model.StartedAt.ToLocalTime().ToString("g")</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5 class="text-muted">⏰ End of the test:</h5>
                    <p class="fs-5">@Model.FinishedAt?.ToLocalTime().ToString("g")</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">🕓 Overall time:</h5>
                    <p class="fs-5">@Model.TimeSpent.ToString(@"hh\:mm\:ss")</p>
                </div>
            </div>

            <hr />

            <div class="row text-center mb-3">
                <div class="col-md-4">
                    <h5 class="text-muted">🎯 Score</h5>
                    <p class="fs-4 fw-bold text-success">@Model.Points</p>
                </div>
                <div class="col-md-4">
                    <h5 class="text-muted">📊 Average time per question</h5>
                    <p class="fs-4">@Model.TimePerQuestion.ToString(@"hh\:mm\:ss")</p>
                </div>
                <div class="col-md-4">
                    <h5 class="text-muted">🏆 Rate</h5>
                    <p class="fs-4 text-info">@(Math.Round(Model.Points * 100.0 / Model.MaxPoints))%(@Model.Points/@Model.MaxPoints)</p> 
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/" class="btn btn-outline-primary px-4 py-2 rounded-pill">На головну</a>
            </div>
        </div>
    </div>
</div>